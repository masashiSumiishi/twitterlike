<li class="micropost">
  <div class="micropost__profile">
    <p><%= link_to gravatar_for(micropost.user, size: 50), micropost.user %></p>
    <p class="micropost__profileName"><%= link_to micropost.user.name, micropost.user %></p>
  </div>
  <div class="micropost__content"><%= micropost.content %></div>
  <p class="micropost__timestamp"><%= time_ago_in_words(micropost.created_at) %> 前</p>
</li>
