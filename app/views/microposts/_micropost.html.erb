<li class="micropost">
  <div class="micropost__profile">
    <p><%= link_to gravatar_for(micropost.user, size: 50), micropost.user %></p>
    <p class="micropost__profileName"><%= link_to micropost.user.name, micropost.user %></p>
  </div>
  <div class="micropost__content">
    <p><%= image_tag micropost.picture.url if micropost.picture? %></p>
    <p><%= micropost.content %></p>
  </div>
  <span class="micropost__timestamp"><%= time_ago_in_words(micropost.created_at) %>前</span>
  <% if current_user?(micropost.user) %>
    <span class="micropost__delete"><%= link_to "削除する", micropost, method: :delete, data: { confirm: "削除しますか？"} %></span>
  <% end %>
  <div>
    <%= render "likes/like", micropost: micropost %>
  </div>
</li>
