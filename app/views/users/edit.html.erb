<% provide(:title, '編集') %>
<h1 class="formTitle">プロフィール編集</h1>
<div class="formIcon">
  <%= image_tag "blue-bird.jpg", class:"formIcon__img" %>
</div>
<div class="form">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form__element">
      <%= f.label :name, "名前", class:"form__label" %>
      <%= f.text_field :name, class:"form__input", placeholder:"名前" %>
    </div>
    <div class="form__element">
      <%= f.label :email, class: "form__label" %>
      <%= f.email_field :email, class:"form__input", placeholder:"email" %>
    </div>
    <div class="form__element">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password, class:"form__input", placeholder:"password" %>
    </div>
    <div class="form__element">
      <%= f.label :password_confirmation, "Passwordの確認", class: "form__label" %>
      <%= f.password_field :password_confirmation, class:"form__input", placeholder:"Passwordの確認" %>
    </div>
    <%= f.submit "編集する", class: "form__btn" %>
  <% end %>
  <div class="form__gravatar">
    <%= gravatar_for @user %>
    <a class="form__gravatarLink" href="http://gravatar.com/emails" target="_blank" rel="noopener">画像を変更する</a>
  </div>
</div>
