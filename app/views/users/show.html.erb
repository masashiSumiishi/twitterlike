<% provide(:title, @user.name) %>
<div class="user">
  <div class="userProfile">
    <div>
      <div class="userProfile__img">
        <%= gravatar_for @user %>
      </div>
      <p class="userProfile__name">
        <%= @user.name %>
      </p>
      <%= render 'shared/stats' %>
    </div>
    <%= render 'follow_form' if logged_in?%>
    <% if logged_in? && @user.id == current_user.id %>
      <%= render 'shared/micropost_form' %>
    <% end %>
  </div>
  <div class="userMicropost">
    <% if @user.microposts.any? %>
      <h3 class="userMicropost__title">Tweet(<%= @user.microposts.count %>)</h3>
      <ol class="userMicropost__lists">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, :previous_label=>'&#171;前', :next_label=>'次&#187;' %>
    <% end %>
  </div>
</div>
