<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>", class="statsLink statsLink--following">
    <strong>
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>", class="statsLink">
    <strong>
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
